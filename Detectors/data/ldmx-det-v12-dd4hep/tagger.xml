      <layer id="1" 
        type="Box" dx="tracker_sensor_x/2" dy="tracker_sensor_y/2" dz="tracker_sensor_thickness/2" material="Silicon" >
        <comment>
        </comment>
        <position x="0.*mm" y="0.*mm" z="tagger_layer_offset" />
      </layer>
      <layer id="2" 
