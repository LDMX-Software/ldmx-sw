###############################################################################
# Setup script for LDMX Software environment
#
# This file is configured by CMake and installed into the 'bin' directory.
#
# It was configured for the installation at LDMXSW_DIR
#
# @author Jeremy McCormick, SLAC
# @author Tom Eichlersmith, University of Minnesota
###############################################################################

# set env var pointing to install dir
export LDMXSW_DIR=@CMAKE_INSTALL_PREFIX@

# setup Geant4 env
#   Geant4_DIR cmake variable points to directory containing the Geant4 libraries
#   Need to back out of that directory to find the setup script
source @Geant4_DIR@/../../bin/geant4.sh

# setup ROOT env
#   ROOT_DIR cmake variable points to directory containing the cmake use file
#   Need to back out of that directory to find the setup script
source @ROOT_DIR@/../../../bin/thisroot.sh

# set load library path for module libs
export LD_LIBRARY_PATH=$LDMXSW_DIR/lib:@PYTHON_LIBRARY_DIR@:@XercesC_LIBRARY_DIR@:$LD_LIBRARY_PATH

# set python path
export PYTHONPATH=$LDMXSW_DIR/lib/python:$PYTHONPATH

# add bin dir to PATH
export PATH=$LDMXSW_DIR/bin:$PATH
